@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    @if(User.IsInRole("Admin"))
    {
        <li>
            <a class="btn btn-primary me-4" asp-controller="Car" asp-action="Index">All cars</a>
        </li>       
            <li>
                <a class="btn btn-primary me-4" asp-controller="Requests" asp-action="Index">All requests</a>
            </li>
        }
        else
        {
            <li>
                <a class="btn btn-primary me-4" asp-controller="Requests" asp-action="Create">Create request</a>
            </li>
        }

    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
